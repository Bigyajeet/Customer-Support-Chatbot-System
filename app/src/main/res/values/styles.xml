<resources>

    <!-- Base application theme -->
    <style name="UserMessageBubble">
        <item name="android:background">@drawable/user_bubble</item>
        <item name="android:textColor">#FFFFFF</item>
        <item name="android:padding">10dp</item>
    </style>

    <!-- Chat Bubble (Bot Message) -->
    <style name="BotMessageBubble">
        <item name="android:background">@drawable/bot_bubble</item>
        <item name="android:textColor">#000000</item>
        <item name="android:padding">10dp</item>
    </style>

    <!-- Chat Input Field -->
    <style name="ChatInputStyle" parent="Widget.AppCompat.EditText">
        <item name="android:layout_height">wrap_content</item>
        <item name="android:background">@drawable/edittext_bg</item>
        <item name="android:padding">10dp</item>
        <item name="android:textColor">#000000</item>
        <item name="android:textColorHint">#999999</item>
    </style>

    <!-- Send Button Style -->
    <style name="SendButtonStyle" parent="Widget.AppCompat.Button">
        <item name="android:backgroundTint">#3F51B5</item>
        <item name="android:textColor">#FFFFFF</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:padding">10dp</item>
    </style>

</resources>
